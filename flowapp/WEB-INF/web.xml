<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Flow questionnaire</display-name>
	<servlet>
		<servlet-name>Flow questionnaire</servlet-name>
		<servlet-class>org.elbe.flow.servlets.impl.QuestionnaireRequestHandler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Flow questionnaire</servlet-name>
		<url-pattern>/servlet</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
		<!-- 30 minutes -->
	</session-config>
</web-app>
